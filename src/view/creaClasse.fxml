<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CreaClasseController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: black; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Crea nuova classe" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label text="Nome della classe:" />
            <TextField fx:id="nomeClasseField" />
            <Button text="Crea" onAction="#creaClasseClicked" style="-fx-background-color: black; -fx-text-fill: white;" />
        </VBox>
    </center>
</BorderPane>
